extends includes/layout.pug
block content
  if page.title === 'categories'
    each val in site.categories.data
      .one-category-list
        i.fa.fa-folder.fa-2x
        span(id=val.name class="category-title")= val.name
        .post-preview
          each post in site.posts.data
            each category in post.categories.data
              if category.name === val.name
                .post-title
                  a(href=url_for(post.path))= post.title
                hr
  if page.title === 'tags'
    each val in site.tags.data
      .one-tag-list
        i.fa.fa-tags.fa-2x
        span(id=val.name class="tag-title")= val.name
        .post-preview
          each post in site.posts.data
            each tag in post.tags.data
              if tag.name === val.name
                .post-title
                  a(href=url_for(post.path))= post.title
                hr
  if page.title === 'selfie'
    .pic