#header-info
  margin-bottom: 10px

#header-container
  @extend $layout-container
  padding-top: 5rem

#terminal-pl
  @extend $layout-inner
  font-family: $cute-font

#top-bar
  position: relative
  font-size: .8rem

#control 
  position: absolute
  margin: 0
  padding: .4rem
  list-style: none 
  .btn
    display: inline-block
    margin: .1rem
    width: .6rem
    height: .6rem
    border-radius: 100%
    for num in 0 1 2
      &:nth-child({num + 1})
        background-color: $btn-color[num]

#file-path
  padding: .4rem 0
  text-align: center
  .folder-ic
    margin-right: .2rem
    color: $light-blue

#code-pl
  padding: 1rem 1.5rem
  height: 450px
  border-radius: 5px
  border-top-left-radius: 0
  border-top-right-radius: 0
  color: #fff
  background: #383737
  overflow-y: auto
  .answer,
  a
    color: $dark-green
  a
    text-decoration: underline
  .code-pl-input
    color: $dark-red
  .archive
    display: inline-block
    margin-right: 5px
    //text-decoration none
  .category
    display: inline-block
    margin-right: 5px
    //text-decoration none
  .tag
    display: inline-block
    margin-right: 5px
  //text-decoration none
  .selfie
    margin: 0 auto
    width: 5rem
    height: 5rem
    img 
      padding: 4px
      max-width: 100%

@media screen and (max-width: $sm)
  #code-pl
    height: 200px

